{
  "name": "bluehost-blueprint",
  "version": "1.0.0",
  "description": "A starter block theme from Bluehost",
  "main": "merge-theme.js",
  "scripts": {
    "start": "npm-watch merge-theme",
    "merge-theme": "node merge-theme.js",
    "bundle": "node zip-theme.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newfold-labs/wp-theme-bluehost-blueprint.git"
  },
  "author": "Bluehost",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/newfold-labs/wp-theme-bluehost-blueprint/issues"
  },
  "homepage": "https://github.com/newfold-labs/wp-theme-bluehost-blueprint#readme",
  "devDependencies": {
    "@wordpress/env": "^10.21.0",
    "dir-archiver": "^2.1.0",
    "npm-watch": "^0.13.0"
  },
  "watch": {
    "merge-theme": {
      "patterns": [
        "theme-config"
      ],
      "extensions": [
        "json"
      ]
    }
  }
}
