{
  "name": "bluehost-blueprint",
  "version": "1.0.0",
  "description": "A starter block theme from Bluehost",
  "main": "merge-theme.js",
  "scripts": {
    "start": "npm-watch",
    "merge-theme": "node merge-theme.js",
    "lint-css": "stylelint \"assets/**/*.css\"",
    "lint-css:fix": "stylelint \"assets/**/*.css\" --fix",
    "bundle": "node zip-theme.js",
    "css:minify": "node minify-css.mjs",
    "build": "npm run merge-theme && npm run css:minify && npm run bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newfold-labs/wp-theme-bluehost-blueprint.git"
  },
  "author": "Bluehost",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/newfold-labs/wp-theme-bluehost-blueprint/issues"
  },
  "homepage": "https://github.com/newfold-labs/wp-theme-bluehost-blueprint#readme",
  "devDependencies": {
    "@wordpress/env": "^10.21.0",
    "cssnano": "^7.0.6",
    "dir-archiver": "^2.1.0",
    "fast-glob": "^3.2.7",
    "npm-watch": "^0.13.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "stylelint": "^16.18.0",
    "stylelint-config-recommended": "^16.0.0"
  },
  "watch": {
    "merge-theme": {
      "patterns": [
        "theme-config"
      ],
      "extensions": [
        "json"
      ]
    },
    "css:minify": {
      "patterns": [
        "assets"
      ],
      "extensions": [
        "css"
      ]
    }
  }
}
